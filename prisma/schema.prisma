generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Area {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  processes  Process[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Process {
  id              Int       @id @default(autoincrement())
  name            String
  description     String?
  areaId          Int
  area            Area      @relation(fields: [areaId], references: [id])
  parentId        Int?
  parent          Process?  @relation("ProcessHierarchy", fields: [parentId], references: [id])
  subprocesses    Process[] @relation("ProcessHierarchy")
  tools           Tool[]    @relation("ProcessTools")
  responsibleId   Int?
  responsible     User?     @relation("UserProcesses", fields: [responsibleId], references: [id])
  documentation   String?
  type            String    @default("manual")
  status          String    @default("active")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Tool {
  id         Int       @id @default(autoincrement())
  name       String
  processes  Process[] @relation("ProcessTools")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  processes  Process[] @relation("UserProcesses")
  createdAt  DateTime  @default(now())
}
